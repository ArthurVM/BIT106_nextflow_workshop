params.outputDir = "./output"

profiles {

  singularity {

    singularity.enabled = 'true'
    singularity.autoMounts = 'true'

    // path to cached singularity containers
    singularity.cacheDir = "${baseDir}/singularity"

  }

  docker {

    docker.enabled = true
    fixOwnership = true
    runOptions = "-u \$(id -u):\$(id -g)"

  }
}